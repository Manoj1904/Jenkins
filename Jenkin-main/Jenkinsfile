pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/your-username/capstone.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t your-username/capstone:latest .'
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                sh 'docker login -u your-username -p your-password'
                sh 'docker push your-username/capstone:latest'
            }
        }
        
        stage('Deploy') {
            steps {
                sh './deploy.sh'
            }
        }
    }
}
